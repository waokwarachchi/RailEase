<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Hithachi">
    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/lavender"
                android:orientation="vertical"
                android:padding="5dp">



            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/lavender_border"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:hint="Your name"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/lavender" />

        <EditText
            android:id="@+id/nic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/lavender_border"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:hint="NIC"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/lavender" />

        <EditText
            android:id="@+id/cnum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/lavender_border"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:hint="Contact Number"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/lavender" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/lavender_border"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:hint="Address"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/lavender" />


        <EditText
            android:id="@+id/sstation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/lavender_border"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:hint="Start Station"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/lavender" />

        <EditText
            android:id="@+id/estation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/lavender_border"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:hint="End Station"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/lavender" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/lavender_border"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:hint="Date"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/lavender" />

    </LinearLayout>


    <Button
        android:id="@+id/update"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/aclonica"
        android:text="Update"
        android:layout_marginBottom="110dp"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:backgroundTint="@color/lavender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937"/>
    <Button
        android:id="@+id/button8"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/aclonica"
        android:text="Book"
        android:layout_marginBottom="110dp"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:backgroundTint="@color/lavender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943"/>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="112dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/blue_default"
            android:text="Guidline for Hithachi and Compartment Booking"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/guid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_download"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="90dp"
            android:textSize="20sp"
            android:layout_marginRight="90dp"
            android:background="@color/blue_default"
            android:hint="Download" />

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>