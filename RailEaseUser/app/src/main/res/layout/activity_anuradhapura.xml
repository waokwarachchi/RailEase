<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        tools:context=".Anuradhapura">


        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="792dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="2"
            app:sliderStartAutoCycle="true">


        </com.smarteist.autoimageslider.SliderView>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="387dp"
            android:layout_height="105dp"
            android:layout_marginStart="9dp"

            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_slider">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Anuradhapura is a major city in Sri Lanka. It is the capital city of North Central Province, Sri Lanka and the capital of Anuradhapura District. Anuradhapura is one of the ancient capitals of Sri Lanka, famous for its well-preserved ruins of an ancient Sinhala civilisation."
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="387dp"
            android:layout_height="105dp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="300dp">


        </LinearLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="390dp"
            android:layout_height="143dp"

            android:layout_marginStart="9dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="8dp"
            android:text="Area: 7,179 km²"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="188dp"

            android:layout_height="26dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="195dp"
            android:text="Elevation: 81 m²"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.014"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_slider" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="369dp"
            android:layout_height="27dp"



            android:layout_marginTop="438dp"
            android:text="Weather: 30°C, Wind SW at 23 km/h, 76% Humidity "
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="369dp"
            android:layout_height="27dp"

            android:layout_marginStart="9dp"

            android:layout_marginBottom="2dp"
            android:text="Population: 50,595 (2012) "
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/textView23"
            app:layout_constraintEnd_toStartOf="@+id/textView20"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="244dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            tools:layout_editor_absoluteX="13dp">

            <TextView
                android:layout_width="369dp"
                android:layout_height="27dp"
                android:layout_marginStart="9dp"
                android:text="Buddhism and Anuradhapura "
                android:textColor="@color/black"

                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="385dp"
            android:layout_height="267dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <TextView
                android:layout_width="367dp"
                android:layout_height="match_parent"

                android:text="Anuradhapura was a major intellectual centre for early Theravāda Buddhism, home to revered Buddhist philosophers including Buddhaghosa.\n

During the reign of Dhatusena (455-473) a redaction of the Theravada Buddhist canon took place while at the same time 18 new vihara (temple complexes) were built and a statue erected for Mahinda, the Indian prince-monk who introduced Buddhism to the island.\n

During the late Anuradhapura period, the royal family and nobility of Sri Lanka strongly supported Buddhism. As such, they frequently commissioned works of art and donated these items to Buddhist temples. In return, the temple and local Buddhist community supported the king's rule. Artworks featuring depictions of Avalokitesvara, the Bodhisattva of Mercy and Compassion, became increasingly popular. "
                android:textColor="@color/black"

                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="382dp"
            android:layout_height="29dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

            <TextView
                android:layout_width="369dp"
                android:layout_height="27dp"
                android:text="Excavations"
                android:textColor="@color/black"

                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="381dp"
            android:layout_height="26dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

            <TextView
                android:layout_width="369dp"
                android:layout_height="27dp"
                android:text="Places of veneration"
                android:textColor="@color/black"

                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="385dp"
            android:layout_height="158dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

            <TextView
                android:layout_width="373dp"
                android:layout_height="158dp"
                android:text="Jaya Sri Maha Bodhi\n
Ruwanwelisaya\n
Thuparamaya\n
Lovamahapaya\n
Abhayagiri Dagaba\n
Jetavanarama\n
Mirisaveti Stupa\n
Lankarama"
                android:textColor="@color/black"

                android:textSize="15sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>